<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:id="@+id/l">
    <TextView
        android:id="@+id/ticker"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/mark"
        android:layout_toStartOf="@+id/mark"
        android:layout_centerVertical="true"
        android:layout_marginRight="130dp"
        android:layout_marginEnd="130dp"
        android:gravity="center">
    </TextView>
    <ImageView
        android:id="@+id/imageTesla"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/mark"
        android:layout_toStartOf="@+id/mark"
        android:layout_marginRight="75dip"
        android:layout_marginEnd="75dip"
        android:gravity="center">
    </ImageView>
    <TextView
        android:id="@+id/price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/favorits"
        android:layout_toStartOf="@+id/favorits"
        android:layout_marginRight="2dip"
        android:layout_marginEnd="2dip"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/changing"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="dssdf"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mark"
        android:layout_toEndOf="@+id/mark"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:gravity="center">
    </TextView>
    <ImageView
        android:id="@+id/upOrDown"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mark"
        android:layout_toEndOf="@+id/mark"
        android:layout_marginLeft="42dip"
        android:layout_marginStart="42dip"
        android:gravity="center">
    </ImageView>
    <Button
        android:id="@+id/favorits"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:textStyle="bold"
        android:onClick="onClick"
        android:textSize="13sp"
        android:layout_toEndOf="@+id/mark"
        android:layout_toRightOf="@+id/mark"
        android:layout_centerVertical="true"
        android:layout_marginLeft="115dp"
        android:layout_marginStart="115dp"
        android:gravity="center">
    </Button>
    <TextView
        android:id="@+id/mark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
    </TextView>
</RelativeLayout>