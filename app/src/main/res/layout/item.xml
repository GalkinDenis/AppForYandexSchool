<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:id="@+id/l">

    <ImageView
        android:id="@+id/imageTesla"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        android:layout_marginRight="140dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintRight_toLeftOf="@+id/mark"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        app:layout_constraintRight_toLeftOf="@+id/mark"
        app:layout_constraintLeft_toRightOf="@+id/imageTesla"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="70dip"
        android:layout_marginEnd="70dip"
        >
    </TextView>

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/price"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        app:layout_constraintRight_toLeftOf="@+id/mark"
        app:layout_constraintLeft_toRightOf="@+id/imageTesla"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dip"
        android:layout_marginEnd="70dip"
        >
    </TextView>

    <TextView
        android:id="@+id/mark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="2dip"
        android:layout_marginEnd="2dip">
    </TextView>

    <TextView
        android:id="@+id/price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        app:layout_constraintLeft_toRightOf="@+id/ticker"
        app:layout_constraintRight_toLeftOf="@+id/details"
        android:layout_marginBottom="25dp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/changing"
        app:layout_constraintBottom_toBottomOf="@+id/changing"
        app:layout_constraintRight_toLeftOf="@+id/changing"
        android:layout_marginRight="5dip"
        android:layout_marginEnd="5dip"
        >
    </TextView>

    <TextView
        android:id="@+id/changing"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        app:layout_constraintLeft_toRightOf="@+id/ticker"
        app:layout_constraintRight_toLeftOf="@+id/details"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dip"
        android:layout_marginStart="25dip"
        android:gravity="center">
    </TextView>

    <ImageView
        android:id="@+id/upOrDown"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@+id/changing"
        app:layout_constraintBottom_toBottomOf="@+id/changing"
        app:layout_constraintLeft_toRightOf="@+id/changing"
        android:gravity="center">
    </ImageView>

    <Button
        android:id="@+id/details"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="#47A891"
        android:background="@drawable/buttonshape"
        android:onClick="onClickShowDetails"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        app:layout_constraintRight_toLeftOf="@+id/favorits"
        app:layout_constraintLeft_toRightOf="@+id/mark"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        >
    </Button>

    <Button
        android:id="@+id/favorits"
        android:textColor="#47A891"
        android:background="@drawable/buttonshape"
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:gravity="center"
        android:onClick="onClickAddOrRemoveFromFavorites"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mark"
        >
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>
